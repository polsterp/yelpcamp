<% include ../partials/header %>

<div class="container text-center">
    <h1>Add a new Comment to <%= campground.name %></h1>

    <div class="row" style="width: 30%; margin: 30px auto">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text"> 
            </div>
            <div class="form-group">
                <input class="btn btn-success btn-md btn-block" type="submit">
            </div>
        </form>
        <a href="/campgrounds">Back to Campgrounds</a>
    </div>
    <p></p>

<% include ../partials/footer %>
